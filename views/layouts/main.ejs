<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Firebase Notification Dashboard</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="<%= locals.darkMode ? '' : 'light-mode' %>">
  
  <% if (locals.user) { %>
    <!-- Header -->
    <%- include('../partials/header') %>
    
    <div class="dashboard-container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="px-3 mb-4">
          <div class="d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Navigation</h5>
          </div>
        </div>
        
        <ul class="nav flex-column px-2">
          <li class="nav-item">
            <a class="nav-link <%= title === 'Dashboard' ? 'active' : '' %>" href="/dashboard">
              <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= title === 'Services' || title === 'Create Service' ? 'active' : '' %>" href="/services">
              <i class="fas fa-server"></i> Services
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= title === 'FCM Tokens' || title.includes('Tokens for') ? 'active' : '' %>" href="/tokens">
              <i class="fas fa-key"></i> FCM Tokens
            </a>
          </li>
          <li class="nav-item mt-4">
            <a class="nav-link text-danger" href="/auth/logout">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </li>
        </ul>
      </aside>
      
      <!-- Main Content -->
      <div class="content-wrapper">
        <%- include('../partials/messages') %>
        <%- body %>
      </div>
    </div>
  <% } else { %>
    <%- include('../partials/messages') %>
    <%- body %>
  <% } %>
  
  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Custom JavaScript -->
  <script src="/js/main.js"></script>
</body>
</html>
